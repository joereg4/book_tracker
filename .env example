# Application settings
FLASK_SECRET_KEY=$(python -c 'import secrets; print(secrets.token_hex(16))')
FLASK_ENV=development
APP_URL=http://localhost:5000

# API Keys
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Database settings
DATABASE_URL=postgresql://books_user:your_password_here@localhost/books_dev

# Email settings (if using password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Security settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=2592000  # 30 days in seconds

# Rate limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200/hour
RATELIMIT_STORAGE_URL=memory://

